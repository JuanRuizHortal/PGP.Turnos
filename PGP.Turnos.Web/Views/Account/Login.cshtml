@{
    Layout = null;
    var anio = ViewData["AnioTrabajo"] ?? DateTime.Today.Year;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Login - PGP Turnos</title>
</head>
<body>
    <h2>Login</h2>

    @if (ViewBag.Error != null)
    {
        <div style="color:red">@ViewBag.Error</div>
    }

    <form method="post" action="/Account/Login">
        <label>Usuario: <input type="text" name="login" value="" /></label><br />
        <label>Clave: <input type="password" name="clave" value="" /></label><br />
        <label>Año de trabajo: <input type="text" name="anioTrabajo" value="@anio" /></label><br />
        <button type="submit">Aceptar</button>
        <button type="button" onclick="window.location.href='/'">Cancelar</button>
    </form>
</body>
</html>